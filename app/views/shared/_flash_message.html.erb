<div class='col-sm-offset-4 col-sm-4' style="padding: 0px;">
	<% flash.each do |key, value| %>
		<div class="alert alert-<%= ['error','alert'].include?(key.to_s) ? 'danger' : 'success' %> alert-dismissable" style="border-radius: 0px;">
			<%= value %>
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>
	<% end %>
</div>