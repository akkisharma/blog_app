<style type="text/css">
	hr.style9 {
	border-top: 1px dashed #8c8b8b;
	border-bottom: 1px dashed #fff;
}
</style>

<div class="col-lg-12">
	<% comments.each do |comment| %>
		<p>
			<b>Commenter:</b>
			<%= comment.commenter %>
		</p>

		<p>
			<b>Comment:</b>
			<%= comment.body %> |
			<% if comment.user_id == current_user.id || is_powerfull? %>
			<%= link_to 'Destroy Comment', [comment.post, comment],
			:confirm => 'Are you sure?',
			:method => :delete, style: 'color: red;' %>
			<% end %>
		</p>
		<hr class="style9">

	<% end %>
</div>