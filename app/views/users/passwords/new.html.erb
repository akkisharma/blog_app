<div class="row">
	<div class="col-xs-12 col-sm-offset-4 col-sm-4 form-style">

		<h2>Forgot your password?</h2>
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'shared/error_messages', object: resource %>

			<div class="form-group">
				<%= f.label :email %><br />
				<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", required: true %>
			</div>

			<div class="actions">
				<%= f.submit "Send me reset password instructions", class: "btn btn-warning form-control" %>
			</div>
			<% end %>
			<%= render "users/shared/links" %>

	</div>
</div>